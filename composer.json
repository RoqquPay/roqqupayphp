{
    "name": "roqqupay/roqqupayphp",
    "description": "roqqupayphp",
    "keywords": [
        "roqqupay",
        "roqqupayphp"
    ],
    "homepage": "https://github.com/roqqupay/roqqupayphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Chibuokem ibezim",
            "email": "chibuokemibezim@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Roqqupay\\Roqqupayphp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Roqqupay\\Roqqupayphp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
